!~/.Xresources

!! Perl Extensions
URxvt.perl-ext-common: 		default,matcher,keyboard-select,selection-to-clipboard

!! URLs
URxvt.keysym.C-U:		perl:url-select:select-next
URxvt.url-launcher:		/usr/bin/chromium
URxvt.underlineURLs: 		true
URxvt.matcher.button:		1

!! Copy-paste
URxvt.keysym.M-Escape:		perl:keyboard-select:activate
URxvt.keysym.C-M-c:		builtin-string:
URxvt.keysym.C-M-v:		builtin-string:
URxvt.keysym.C-S-C:		eval:selection_to_clipboard
URxvt.keysym.C-S-V:		eval:paste_clipboard

!! Shell formatting
URxvt*loginShell: 		true
URxvt*scrollStyle:		plain
URxvt*scrollTtyKeyPress:	true
URxvt*scrollBar:		false
URxvt*scrollBar_right:		false
URxvt*scrollBar_floating:	false
URxvt.secondaryScroll: true
URxvt*fading:			30
URxvt.saveLines: 2000
!URxvt.internalBorder: 25
URxvt.geometry: 90x22
URxvt*inheritPixmap: false
urxvt*depth: 32
urxvt*transparent: true
urxvt*shading: 30

!! Keybinds
URxvt*keysym.Control-Up:	\033[1;5A
URxvt*keysym.Control-Down:	\033[1;5B
URxvt*keysym.Control-Left:	\033[1;5D
URxvt*keysym.Control-Right:	\033[1;5C
URxvt.iso14755:			false
URxvt.iso14755_52:		false

URxvt.font: 			xft:Terminus (TTF):size=9

!! Tabs
URxvt.tabbed.saveLines: 2000
URxvt.tabbed.scrollBar: false

!! Colors
URxvt.foreground: #FCC000

! Special
*.foreground:   #BABDB6
*.background:   #000000
*.cursorColor:  #BABDB6

! black
*.color0:       #2E3436
*.color8:       #555753

! red
*.color1:       #CC0000
*.color9:       #EF2929

!green
*.color2:       #ffffff
*.color10:      #8ae234
 
! yellow
*.color3:       #c4a000
*.color11:      #fce94f
 
! blue
*.color4:       #3465a4
*.color12:      #fcc000
 
! magenta
*.color5:       #826300
*.color13:      #ad7fa8
 
! cyan
*.color6:       #06989a
*.color14:      #34e2e2
 
! white
*.color7:       #d3d7cf
*.color15:      #eeeeec

URxvt.background: #231E1B
